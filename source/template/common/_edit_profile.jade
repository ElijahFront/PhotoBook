.profile__container
	.edit__profile
		form.profile
			
			.profile__title__block
				h2.profile__title Редактировать профиль
				+icon('close','svg-close-dims')

			.profile__name__block
				span.profile__input__title Имя
				input.profile__name__input(name='name_first' type='text' placeholder='Имя')
				input.profile__name__input(name='name_second' type='text' placeholder='Фамилия')
			
			.profile__about__block
				span.profile__input__title О себе
				textarea.profile__about__area(name='about_user' placeholder='Фамилия')		
			
			.profile__photo__block
				+user('','us.jpg')
				input(type='file')
